<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="com.pcfix.db.User" table="user">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="name" type="string"></property>
        <property name="pwd" type="string"></property>
        <property name="type" type="int"></property>
        <property name="phone" type="string"></property>
        <property name="addr" type="string"></property>
        <property name="star" type="int"></property>
    </class>
</hibernate-mapping>
